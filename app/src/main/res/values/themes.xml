<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RetailRevamp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/increasing_green</item>
        <item name="colorOnSurfaceInverse">@color/decreasing_red</item>
    </style>

    <style name="NavigationView" >
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="simpleItemSelectedRippleColor">@color/increasing_green
        </item>
        <item name="itemShapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Nav</item>
        <item name="itemShapeFillColor">@drawable/background_selector_menu_item</item>
    </style>
    <style name="ShapeAppearanceOverlay.Nav" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ThemeOverlay.NavigationView" parent="">
        <item name="android:colorControlHighlight">@android:color/black</item>
    </style>

    <style name="Theme.RetailRevamp" parent="Base.Theme.RetailRevamp" />

    <style name="textLight">
        <item name="android:fontFamily">@font/circular_std_light</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="textSubHeading">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="textBold">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="textHeading">
        <item name="android:fontFamily">@font/circular_std_bold</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="textSubscript">
        <item name="android:fontFamily">@font/circular_std_light</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="textSubSubscript">
        <item name="android:fontFamily">@font/circular_std_light</item>
        <item name="android:textSize">10dp</item>
    </style>
</resources>